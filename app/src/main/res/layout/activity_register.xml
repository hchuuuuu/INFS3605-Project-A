<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

  <ImageView
      android:id="@+id/ivLoginBox3"
      android:layout_width="310dp"
      android:layout_height="60dp"
      android:layout_marginTop="25dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      app:srcCompat="@drawable/text_box" />

  <ImageView
      android:id="@+id/ivFullNameBox"
      android:layout_width="310dp"
      android:layout_height="60dp"
      android:layout_marginTop="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivEmailBox"
      app:srcCompat="@drawable/text_box" />

  <ImageView
      android:id="@+id/ivEmailBox"
      android:layout_width="310dp"
      android:layout_height="60dp"
      android:layout_marginTop="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivLoginBox3"
      app:srcCompat="@drawable/text_box" />

  <ImageView
      android:id="@+id/ivRegisterLeaf"
      android:layout_width="295dp"
      android:layout_height="240dp"
      android:layout_marginStart="130dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/leaf" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="57dp"
      android:layout_marginTop="260dp"
      android:fontFamily="sans-serif"
      android:text="Sign up"
      android:textColor="#81b69a"
      android:textSize="30sp"
      android:textStyle="bold"
      android:typeface="normal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/regName"
      android:layout_width="264dp"
      android:layout_height="48dp"
      android:background="@android:color/transparent"
      android:ems="10"
      android:hint="Full Name"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="@+id/ivLoginBox3"
      app:layout_constraintEnd_toEndOf="@+id/ivLoginBox3"
      app:layout_constraintStart_toStartOf="@+id/ivLoginBox3"
      app:layout_constraintTop_toTopOf="@+id/ivLoginBox3" />

  <EditText
      android:id="@+id/regEmail"
      android:layout_width="261dp"
      android:layout_height="48dp"
      android:background="@android:color/transparent"
      android:ems="10"
      android:hint="Email"
      android:inputType="textEmailAddress"
      android:minHeight="48dp"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="@+id/ivEmailBox"
      app:layout_constraintEnd_toEndOf="@+id/ivEmailBox"
      app:layout_constraintStart_toStartOf="@+id/ivEmailBox"
      app:layout_constraintTop_toTopOf="@+id/ivEmailBox"
      app:layout_constraintVertical_bias="0.44" />

  <EditText
      android:id="@+id/regPass"
      android:layout_width="257dp"
      android:layout_height="48dp"
      android:background="@android:color/transparent"
      android:ems="10"
      android:hint="Password"
      android:inputType="textPassword"
      android:minHeight="48dp"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="@+id/ivFullNameBox"
      app:layout_constraintEnd_toEndOf="@+id/ivFullNameBox"
      app:layout_constraintStart_toStartOf="@+id/ivFullNameBox"
      app:layout_constraintTop_toTopOf="@+id/ivFullNameBox" />

  <Button
      android:id="@+id/btnRegister"
      android:layout_width="190dp"
      android:layout_height="55dp"
      android:layout_marginStart="60dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="60dp"
      android:backgroundTint="#81b69a"
      android:text="Sign Up"
      app:cornerRadius="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/regPass" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:text="Already have an account?"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnRegister" />

  <TextView
      android:id="@+id/loginLink"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="Log in"
      android:textColor="#81b69a"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>